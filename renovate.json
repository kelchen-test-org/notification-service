{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "matchPackageNames": [
        "quay.io/konflux-ci/*",
        "registry.access.redhat.com/ubi9/ubi-minimal"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ]
}
